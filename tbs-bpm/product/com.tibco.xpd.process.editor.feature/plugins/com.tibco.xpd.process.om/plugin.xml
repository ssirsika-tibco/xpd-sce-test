<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension
          point="org.eclipse.core.expressions.propertyTesters">
       <propertyTester
             class="com.tibco.xpd.process.om.propertytesters.OMPluginTester"
             id="com.tibco.xpd.process.om.propertytesters.omPluginTester"
             namespace="com.tibco.xpd.process.om"
             properties="isOMExist"
             type="org.eclipse.core.resources.IFile"/>       
    </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent"> 
       
       <actionProvider
            class="com.tibco.xpd.process.om.actions.providers.RefactorActionProvider"
            id="com.tibco.xpd.projectExplorer.action.refactor">
          <enablement>
             <and>
                      <instanceof
                            value="org.eclipse.core.resources.IFile">
                      </instanceof>
                      <test
                            property="org.eclipse.core.resources.extension"
                            value="xpdl">
                      </test>
                      <test
                            property="com.tibco.xpd.analyst.resources.xpdl2.isXPDL2Package">
                      </test>
                      <test
                            property="com.tibco.xpd.resources.specialfolder.isRootSpecialFolder"
                            value="processes">
                      </test>
                      <test
                            forcePluginActivation="true"
                            property="com.tibco.xpd.process.om.isOMExist">
                      </test>
                   </and>
          </enablement>
      </actionProvider>
       <commonWizard
             associatedExtensionId="com.tibco.xpd.projectExplorer.bpmContent"
             type="import"
             wizardId="com.tibco.xpd.process.om.importParticipantsWizard">
          <enablement>
             <and>
                <instanceof
                      value="org.eclipse.core.resources.IFile">
                </instanceof>
                <test
                      property="org.eclipse.core.resources.extension"
                      value="xpdl">
                </test>
                <test
                      property="com.tibco.xpd.analyst.resources.xpdl2.isXPDL2Package">
                </test>
                <test
                      property="com.tibco.xpd.resources.specialfolder.isRootSpecialFolder"
                      value="processes">
                </test>
                <test
                      forcePluginActivation="true"
                      property="com.tibco.xpd.process.om.isOMExist">
                </test>
             </and>
          </enablement>
       </commonWizard>
      
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <wizard
            category="com.tibco.xpd.resources.ui.importWizard.bpm.category"
            class="com.tibco.xpd.process.om.wizards.ImportParticipantsFromOMElementsWizard"
            icon="icons/obj16/Participant.gif"
            id="com.tibco.xpd.process.om.importParticipantsWizard"
            name="%importParticipantsWizard_label">
         <description>
            %importParticipantsWizard_desc
         </description>
      </wizard>
   </extension>
</plugin>
