<?xml version="1.0" encoding="UTF-8"?>
<project name="testsuite" default="run" basedir=".">
	<!-- The property ${eclipse-home} should be passed into this script -->
	<!-- Set a meaningful default value for when it is not. -->
	
	<!-- property name="eclipse-home" value="${basedir}\..\.." /-->
	<target name="localInit" unless="eclipse-home">
		<echo>------ -${osgi.install.area}-------------------- --------</echo>
				<property name="eclipse-home" value="${target_home}"/>
				
				<echo>------ SETTING Local Eclipse home --------</echo>
				<echo>------ ${workspace_loc}       workspace_loc</echo>
				<echo>------ ${env_var}       env_var</echo>
				<echo>------ ${system_property}      system_property</echo>
				<echo>------ ${dev}       dev</echo>
				<echo>------ ${target_home}      target_home</echo>
				<echo>------ ${container_path}       container_path</echo>
				<echo>------ -${osgi.instance.area}------ osgi.instance.area -------------- --------</echo>
				<copy todir="${eclipse-home}/n2-uc7-daa-ws/.metadata/.plugins/${plugin-name}">
				    <fileset dir="${workspace_loc}/${plugin-name}/">
				    </fileset>
				</copy>
		
		</target>
	<echo>Eclipse home: ${eclipse-home}</echo>
	
	<!-- most common defaults in case they are not supplied externally -->
	<property name="os" value="win32"/>
	<property name="ws" value="win32"/>
	<property name="arch" value="x86"/>	
	<property name="extraVMargs" value=" -XX:MaxPermSize=256m -Dbpm.cleandaastaging=false"/>
	
	<!-- sets the properties eclipse-home, and library-file -->
	<property name="plugin-name"
		value="com.tibco.xpd.n2.uc7.daa.test" />
	

	<!-- This target holds all initialization code that needs to be done for -->
	<!-- all tests that are to be run. Initialization for individual tests -->
	<!-- should be done within the body of the suite target. -->
	<target name="init" if="eclipse-home">
		<property environment="env" />
		<tstamp />
		<delete>
			<fileset dir="${eclipse-home}" includes="com*.xml" />
		</delete>
	</target>
	<target name="init-local" unless="eclipse-home">
			<property environment="env" />
			<tstamp />
			<delete>
				<fileset dir="${osgi.instance.area}" includes="com*.xml" />
			</delete>
		</target>
	<target name="hudson-output" if="env.WORKSPACE">
			<property name="results.dir" value="${env.WORKSPACE}/results"/>
			<echo>------ SETTING HUDSON OUTPUT --------</echo>
			<echo>------ ${results.dir}</echo>
			<echo>------ --------------------- --------</echo>		
	</target>
		<target name="local-output" unless="env.WORKSPACE">
				<property name="results.dir" value="${user.dir}/results"/>
				<echo>------ SETTING HUDSON OUTPUT --------</echo>
				<echo>------ ${results.dir}</echo>
				<echo>------ --------------------- --------</echo>
		</target>
	<!-- This target defines the tests that need to be run. -->
	<target name="suite" depends="hudson-output">
		<property name="results.dir" value="${eclipse-home}/results" />
		<property name="plugInWorkspace"
			value="${eclipse-home}/n2-uc7-daa-ws" />
		<delete dir="${plugInWorkspace}" quiet="true" />
		<ant target="ui-test" antfile="${library-file}"
			dir="${eclipse-home}">
			<property name="data-dir" value="${plugInWorkspace}" />
			<property name="plugin-name" value="${plugin-name}" />
			<property name="classname"
				value="com.tibco.xpd.n2.uc7.daa.test.AllTests" />
			<property name="junit-report-output" value="${results.dir}"/>
		</ant>
	</target>

	<!-- This target holds code to cleanup the testing environment after -->
	<!-- after all of the tests have been run. You can use this target to -->
	<!-- delete temporary files that have been created. -->
	<target name="cleanup"></target>

	<!-- This target runs the test suite. Any actions that need to happen -->
	<!-- after all the tests have been run should go here. -->
	<target name="run" depends="init,localInit,init-local,suite,cleanup">
		<ant target="collect" antfile="${library-file}"
			dir="${eclipse-home}">
			<property name="includes" value="com*.xml" />
			<property name="output-file" value="${plugin-name}.xml" />
		</ant>
		
		<!-- TS save the acceptance test result file and DAAs --> 
		<copy todir="${results.dir}">
		    <fileset dir="${eclipse-home}">
		        <include name="**/acceptance-test-report*"/>
				<include name="**/*.daa"/>
		    </fileset>
		</copy>
	</target>
</project>