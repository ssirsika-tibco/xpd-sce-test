<project name="sync-tests" default="sync" basedir="."> 

	<fail unless="username" message="You must supply a username to access the svn repos holding the test projects"/>
	<fail unless="password" message="You must supply a password to access the svn repos holding the test projects"/>
	
	<!-- ================================= 
          target: sync              
         ================================= -->
    <target name="sync" 
    		depends="sync-process-manager-tests,deleteDir" 
    		description="Collect all tests"/>

	
	<target name="sync-process-manager-tests" description="sync Work Manager tests">
		<!-- 'force' is required since target dir 'resources' is not empty --> 
		<exec executable="svn">
			<arg value="export"/>
			<arg value="--force"/>
			<arg value="https://emea-swi-svn.emea.tibco.com/svn/technical/xpd/trunk/extra-stuff/AcceptanceTest/AMX%20M4%20Test%20Cases/Process%20Manager%20use%20cases/"/>
			<arg value="."/>
		</exec>	
	</target>

	<target name="deleteDir">		
	  <delete includeEmptyDirs="true">
			 <fileset dir="${basedir}" casesensitive="false" defaultexcludes="no">			
	      		<include name="**/UC4*/**"/>				
	      		<include name="**/surgerylookup.soa/**"/>				
				<include name="**/com.sample.surgerylookup.soa/**"/>	
			 	<include name="**/mediation.soa/**"/>
				<!-- owned by Paul Raby & not in the right Sturucture-->
				<include name="**/UC1CbDocLiteralWSInvoke/**"/>				
	    	 </fileset>			 
	  	</delete>		
	</target>
	
</project>