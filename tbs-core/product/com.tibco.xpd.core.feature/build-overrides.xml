<project name="com.tibco.xpd.core.feature Overrides">
	<property name="reldist.download.enable" value="true"/>

    <!-- TODO: Fix and revert to package. Switches obfuscator style to none. 
    This needed to be switched off to pass: 
    An error ('No mapping found for: Class org.tigris.subversion.svnclientadapter.ISVNProperty') occured during the remapping! 
	 -->
